<% if @model == "user" %>
	<h2><%= "Users serch for '#{@content}'" %></h2>
	
	<table class='table'>
	  <thead>
	    <tr>
	      <th>image</th>
	      <th>name</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @records.each do |record| %>
	      <tr>
	        <td><%= attachment_image_tag(record, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %></td>
	        <td><%= record.name %></td>
	        <td><%= link_to 'Show', user_path(record), class: "user_#{record.id}" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	
	
<% elsif @model == "book" %>

	<h2><%= "Books serch for '#{@content}'" %></h2>
	
	<table class='table table-hover table-inverse'>
	  <thead>
	    <tr>
	      <th></th>
	      <th>Title</th>
	      <th>Opinion</th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	   <% @records.each do |record| %>
	      <tr>
	        <td><%= link_to user_path(record.user) do %>
	          <%= attachment_image_tag(record.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
	          <% end %>
	        </td>
	        <td><%= link_to record.title, book_path(record), class: "book_#{record.id}" %></td>
	        <td><%= record.body %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	
<% end %>
