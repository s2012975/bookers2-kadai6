<% book.book_comments.each do |book_comment| %>
    <tr id="comment-<%= book_comment.id %>">
        <div class="comment">
            <div>
      	       <td>
				    <%= link_to user_path(book_comment.user) do %>
					    <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
				        <%= book_comment.user.name %>
				    <% end %>
		        </td>
		        <td>
                    </div class="comment-text">
                        <%= book_comment.comment %>
                    </div>
                </td>
				<td>
					<% if book_comment.user == current_user %>
	                    </div class="">
	                        <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-danger pull-right" %>
	                    </div>
	                <% end %>
                </td>
            </div>
        </div>
    </tr>
<% end %>